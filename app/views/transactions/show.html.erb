<p id="notice"><%= notice %></p>

<p>
  <strong>Product code:</strong>
  <%= @transaction.product_code %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @transaction.phone_number %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @transaction.quantity %>
</p>

<p>
  <strong>Other:</strong>
  <%= @transaction.other %>
</p>

<%= link_to 'Edit', edit_transaction_path(@transaction) %> |
<%= link_to 'Back', transactions_path %>

<% @transactions.each do |f| %>
  <div class="row">
    <div class="col-md-3" style="background-color:yellow;"><%= f.product_code %></div>
    <div class="col-md-3" style="background-color:red;"><%= f.phone_number %></div>
    <div class="col-md-3" style="background-color:blue;"><%= f.quantity %></div>
    <div class="col-md-3" style="background-color:gray;"><%= f.other %></div>
  </div>
<% end %>
